{
    "name": "@binsoul/node-red-contrib-statistics",
    "version": "0.3.1",
    "description": "Perform statistical operations on a configurable duration of incoming events.",
    "keywords": [
        "node-red",
        "statistics",
        "average",
        "mean",
        "moving window"
    ],
    "author": {
        "name": "Sebastian Mößler",
        "email": "s.moeszler@binsoul.de"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/binsoul/node-red-contrib-statistics/issues"
    },
    "homepage": "https://github.com/binsoul/node-red-contrib-statistics",
    "repository": {
        "type": "git",
        "url": "https://github.com/binsoul/node-red-contrib-statistics.git"
    },
    "node-red": {
        "version": ">=3.0.0",
        "nodes": {
            "binsoul-statistics": "dist/statistics/Node.js"
        }
    },
    "scripts": {
        "copy:icons": "copyfiles -u 1 ./src/**/*.{png,svg} ./dist/",
        "copy:locales": "copyfiles -u 1 ./src/**/locales/**/* ./dist/",
        "copy": "npm run copy:icons && npm run copy:locales",
        "build:editor": "rollup --bundleConfigAsCjs -c rollup.config.js",
        "build:editor:watch": "rollup --bundleConfigAsCjs -c rollup.config.js -w",
        "build:runtime": "tsc -p tsconfig.json",
        "build:runtime:watch": "tsc -p tsconfig.watch.json --watch --preserveWatchOutput",
        "build": "rm -rf dist && npm run copy && npm run build:editor && npm run build:runtime",
        "test": "jest --forceExit --detectOpenHandles --colors",
        "test:watch": "jest --forceExit --detectOpenHandles --watchAll",
        "watch": "rm -rf dist && npm run copy && concurrently --kill-others --names \"COPY,EDITOR,RUNTIME\" --prefix \"({name})\"  --prefix-colors \"yellow.bold,cyan.bold,greenBright.bold\" \"onchange -v src/**/*.png src/**/*.svg src/**/*.json -- npm run copy\" \"npm run build:editor:watch\" \"npm run build:runtime:watch\"",
        "lint": "prettier --ignore-path .eslintignore --check '**/*.{js,ts,md}'; eslint --ext .js,.ts .",
        "lint:fix": "prettier --ignore-path .eslintignore --write '**/*.{js,ts,md}'; eslint --ext .js,.ts . --fix",
        "server": "cross-env NODE_ENV=development \"nodemon --watch './dist' -e js,html,json --delay 3 --inspect node_modules/node-red/red.js --settings node-red.config.js\""
    },
    "files": [
        "dist/*",
        "examples/*",
        "package.json",
        "README.md",
        "LICENSE.md"
    ],
    "devDependencies": {
        "@rollup/plugin-typescript": "^11.0.0",
        "@tsconfig/node14": "^1.0.3",
        "@types/node": "^18.11.18",
        "@types/node-red": "^1.2.1",
        "concurrently": "^7.6.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "glob": "^7.1.7",
        "node-red": "^3.0.2",
        "nodemon": "^2.0.20",
        "onchange": "^7.1.0",
        "rollup": "^3.10.0",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "simple-statistics": "^7.8.0"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
